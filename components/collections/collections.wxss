.clview {
  line-height: 40px;
  font-size: 16px;
  border-bottom: 1px solid #999;
  text-transform: uppercase;
  text-indent: 1em;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container {
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.tip {
  background: #999;
  line-height: 20px;
}
