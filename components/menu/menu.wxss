.menuview{
  line-height: 40px;
  font-size: 16px;
  border-bottom: 1px solid #999;
  text-align:center;
  text-transform:uppercase;
}
.container{
	background: rgba(0,0,0,0.6);
  color: #fff;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}


.ico-search{
  position:absolute;
}

.bbar{
  width: 20px;
  height: 20px;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(0,0,0,0.8);
  border-radius: 50%;
  padding:10px;
  z-index: 10;
}
.bbar icon.clear{
  display: none;
}
.bbar icon.menu{
  background: url(data:image/png;base64,) no-repeat;
  width:20px;
  height:20px;
  display:block;
  background-size:100% 100%;
}
.bbar.close{
  padding: 0;
  width: 40px;
  height: 40px;
  background: none;
}
.bbar.close .clear{
  display: block;
}
.bbar.close .menu{
  display: none;
}

.layer{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 9;
  background: rgba(0,0,0,0.6);
  text-align: center;
  color: #fff;
  display: none;
}
.layer .h1{
  font-size:72rpx;
  line-height:160rpx;
}
.layer view{
  line-height: 40px;
  font-size: 16px;
  border-bottom: 1px solid #999;
}